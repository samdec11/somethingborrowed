=form_tag '/login', :remote => true do
  =label_tag 'email'
  =text_field_tag 'email', nil, :autofocus => true, :placeholder => "jane@doe.com"
  =label_tag 'password'
  =password_field_tag 'password'
  =submit_tag 'Login', :class => "button radius tiny"
  =link_to("Cancel", "#", :"data-clear-form" => true, :class => "button radius tiny alert")