=form_for @user, :remote => true do |f|
  =f.label :name
  =f.text_field :name
  =f.label :email
  =f.text_field :email
  =f.label :password
  =f.password_field :password
  =f.label :password_confirmation
  =f.password_field :password_confirmation
  =f.label :address
  =f.text_field :address
  =f.label :phone
  =f.phone_field :phone
  =f.label :image
  =f.file_field :image
  =f.text_field :remote_image_url
  =f.submit

